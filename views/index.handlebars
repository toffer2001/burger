


<div class="container">


    <div class="jumbotron">
        <h1 class="text-center">
            <img src="/assets/images/burger-transparent.png" height="150" width="200">
            <strong>Eat-Da-Burger!</strong>
        </h1>

        <hr>


    </div>
    <div class="row">


        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title text-center">Burgers on the menu!</h2>
                </div>
                <div class="panel-body">
                    <div class="text-center">
                        <ul>
                            {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title text-center">Burgers eaten!</h2>
                </div>
                <div class="panel-body">
                    <div class="text-center">
                        <ul>
                            {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title text-center">Add a NEW burger!</h2>
                </div>
                <div class="panel-body">
                    <div class="text-center">
                        <form class="create-form">

                            <div class="form-group">
                                {{!--
                                <label for="ca">Burger Name:</label> --}}
                                <input type="text" size="30" style="height:30px;" placeholder="Add new burger" id="ca" name="burger_name">
                            </div>

                            <div class="form-group-devoured">
                                <label for="devoured">Eaten?</label>
                                <br>
                                <input type="radio" name="devoured" value="0" checked> Not Eaten
                                <br>
                                <input type="radio" name="devoured" value="1"> Eaten!
                            </div>

                            <button type="submit">Add Burger</button>
                        </form>
                    </div>
                </div>
            </div>


            
        </div>


    </div>
</div>